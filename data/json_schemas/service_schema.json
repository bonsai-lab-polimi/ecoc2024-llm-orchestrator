{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Service name identifier"
    },
    "tag": {
      "type": "string",
      "description": "tag"
    },
    "className": {
      "type": "string",
      "enum": ["Connection"]
    },
    "connGroup": {
      "type": "string"
    },
    "customer": {
      "type": "string",
      "description": "customer name"
    },
    "protection": {
      "type": "boolean",
      "description": "Whether the service is protected or not"
    },
    "hierarchicalLevel": {
      "type": "string",
      "enum": ["service"],
      "description": "Detail of the level in architecture hierarchy"
    },
    "configurationState": {
      "type": "string",
      "enum": ["defined", "routed", "implemented"],
      "description": "Detail of state of configurationState",
      "default": "implemented"
    },
    "connLps": {
      "type": "array",
      "items": {
        "type": "object",
      "properties": {
        "className": {
          "type": "string",
          "enum": ["ConnLpEthCbr"],
          "description": "className of LTP Connection"
        },
        "rate": {
          "type": "string",
          "enum": ["1Gb", "10Gb"],
          "description": "Connection rate"
        },
        "fecType": {
          "type": "string",
          "enum": ["automatic", "noFec", "rsFec"],
          "description": "Forward Error Correction type",
          "default": "automatic"
        }
      },
      "required": ["className", "rate"]}
    },
    "connEndPoints": {
      "type": "array",
      "items": 
        {
          "type": "object",
          "properties": {
            "className": {
              "type": "string",
              "enum": ["ConnEndPoint"]
            },
            "ltp": {
              "type": "object",
              "properties": {
                "className": {
                  "type": "string",
                  "enum": ["Ltp"]
                },
                "id": {
                  "type": "integer",
                  "description": "ID of the source node"
                }
              }
            }
          },
          "endType": {
            "type": "string",
            "enum": ["source", "sink"]
          }
        }
    },
    "routingCriteria": {
      "type": "string",
      "enum": ["byLength", "byHops", "byAdministrativeCost"],
      "description": "Routing method to use in path calculation algorithm"
    },
    "sncpInfo": {
      "type": "object",
      "properties": {
        "holdOffTime": {
          "type": "integer",
          "description": "Hold off time",
          "default": 0
        },
        "revertive": {
          "type": "boolean",
          "description": "Revertive or not revertive",
          "default": true
        },
        "sncpType": {
          "type": "string",
          "enum": ["sncp_n", "sncp_i"],
          "default": "sncp_i",
          "description": "Subnetwork Connection Protection"
        },
        "wtrTime": {
          "type": "integer",
          "description": "Waiting Time",
          "default": 300
        }
      },
      "required": ["holdOffTime", "revertive", "sncpType", "wtrTime"]
    },
    "pm": {
      "type": "object",
      "properties": {
        "cd15m": {
          "type": "string",
          "enum": ["disabled", "enabledCurrent", "enabledCurrentAndArchive"],
          "description": "cd15m state"
        },
        "cd24h": {
          "type": "string",
          "enum": ["disabled", "enabledCurrent", "enabledCurrentAndArchive"],
          "description": "cd24h state"
        }
      }
    },
    "pmode": {
      "type": "object",
      "properties": {
        "provisioned": {
          "type": "string",
          "description": "pm mode provision"
        }
      }
    },
    "asapSelectionProfile": {
      "type": "object",
      "properties": {
        "isDefault": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "alarmMode": {
      "type": "string"
    },
    "extendedAlarmMode": {
      "type": "string"
    },
    "tcaTranspProfile15": {
      "type": "object",
      "properties": {
        "isDefault": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "tcaTranspProfile24": {
      "type": "object",
      "properties": {
        "isDefault": {
          "type": "boolean"
        },
        "name": {
          "type": "string"
        }
      }
    }
  },
  "required": [
    "className",
    "connEndPoints",
    "routingCriteria",
    "sncpInfo",
    "connLps",
    "configurationState",
    "hierarchicalLevel",
    "name",
    "protection"
  ]
}
