{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Lightpath name identifier"
    },
    "tag": {
      "type": "string",
      "description": "tag",
      "default": ""
    },
    "className": {
      "type": "string",
      "enum": ["Connection"]
    },
    "connGroup": {
      "type": "string",
      "description": "connGroup",
      "default": ""
    },
    "customer": {
      "type": "string",
      "description": "Customer name",
      "default": ""
    },
    "protection": {
      "type": "boolean",
      "description": "Whether the lightpath is protected or not",
      "default": false
    },
    "hierarchicalLevel": {
      "type": "string",
      "enum": ["infrastructure"],
      "description": "Detail of the level in architecture hierarchy"
    },
    "configurationState": {
      "type": "string",
      "enum": ["defined", "routed", "implemented"],
      "description": "Detail of state of configurationState",
      "default": "implemented"
    },
    "connLps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "className": {
            "type": "string",
            "enum": ["ConnLpOtu"],
            "description": "className of LTP Connection"
          },
          "rate": {
            "type": "string",
            "enum": ["otu2x"],
            "description": "Connection rate"
          },
          "fecType": {
            "type": "string",
            "enum": ["automatic", "noFec", "rsFec"],
            "description": "Forward Error Correction type"
          }
        },
        "required": ["className", "rate"]
      }
    },
    "connEndPoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "className": {
            "type": "string",
            "enum": ["ConnEndPoint"]
          },
          "ltp": {
            "type": "object",
            "properties": {
              "className": {
                "type": "string",
                "enum": ["Ltp"]
              },
              "id": {
                "type": "integer",
                "description": "ID of the source node"
              }
            }
          }
        },
        "endType": {
          "type": "string",
          "enum": ["source", "sink"]
        }
      }
    },
    "routingCriteria": {
      "type": "string",
      "enum": ["byLength", "byHops", "byAdministrativeCost"],
      "description": "Routing method to use in path calculation algorithm"
    },
    "administrativeCost": {
      "type": "integer",
      "default": 0
    },
    "sncpInfo": {
      "type": "object",
      "properties": {
        "holdOffTime": {
          "type": "integer",
          "description": "Hold off time",
          "default": 0
        },
        "revertive": {
          "type": "boolean",
          "description": "Revertive or not revertive",
          "default": true
        },
        "sncpType": {
          "type": "string",
          "enum": ["sncp_n", "sncp_i"],
          "default": "sncp_i",
          "description": "Subnetwork Connection Protection"
        },
        "wtrTime": {
          "type": "integer",
          "description": "Waiting Time",
          "default": 300
        }
      },
      "required": ["holdOffTime", "revertive", "sncpType", "wtrTime"]
    },
    "pm": {
      "type": "object",
      "properties": {
        "cd15m": {
          "type": "string",
          "enum": ["disabled", "enabledCurrent", "enabledCurrentAndArchive"],
          "default": "disabled"
        },
        "cd24h": {
          "type": "string",
          "enum": ["disabled", "enabledCurrent", "enabledCurrentAndArchive"],
          "description": "cd24h state",
          "default": "disabled"
        }
      }
    },
    "alarmMode": {
      "type": "string",
      "default": ""
    },
    "extendedAlarmMode": {
      "type": "string",
      "default": ""
    }
  },
  "required": [
    "className",
    "connEndPoints",
    "routingCriteria",
    "sncpInfo",
    "connLps",
    "configurationState",
    "hierarchicalLevel",
    "name",
    "protection"
  ]
}
