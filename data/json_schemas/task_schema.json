{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "type": {
        "type": "string",
        "enum": ["Lightpath", "Service-1Gb", "Service-10Gb", "Measurement"]
      },
      "source": { "type": "string", "default": "" },
      "sink": { "type": "string", "default": "" },
      "description": { "type": "string" }
    },
    "required": ["type", "description"]
  }
}
