{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "configurationState": {
      "type": "string",
      "enum": ["started"]
    },
    "pm": {
      "type": "object",
      "properties": {
        "cd15m": {
          "type": "string",
          "enum": ["enabledOnlyCurrent"],
          "description": "Enables monitoring every 15 minutes"
        },
        "cd24h": {
          "type": "string",
          "enum": ["enabledOnlyCurrent"],
          "description": "Enables monitoring every 24 hours"
        }
      }
    },
    "transports": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string", 
          "description": "Name of the lightpath or service to monitor"
        }
      }
    }
  }
}
